<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 20px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
                <div class="form-group">
                <input class="form-control" type="text" value=<%= comment.text %> name="comment[text]">
                </div>
                <div class="form-group">
                <input class="btn btn-lg btn-primary btn-block" type="submit" value="submit">
                </div>
            </form>
            <a href="/campgrounds">back to campgrounds</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>